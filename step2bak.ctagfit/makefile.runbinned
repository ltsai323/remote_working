check_defined = \
    $(strip $(foreach 1,$1, \
    $(call __check_defined,$1,$(strip $(value 2)))))
__check_defined = \
    $(if $(value $1),, \
    $(error Undefined $1$(if $2, ($2))))
# 通用目標，使用 % 做 pattern matching
test_makebin_%:
	@bin_hist=$*; \
	echo "Running binning $$bin_hist"; \
	cc=$${bin_hist##*__}; binning_str=$${cc%.*} ; \
	MAKEFLAGS=-j1 make -f $(singleMAKEFILE) all \
		oDIR=binned__$$binning_str \
		iYAMLcvsb=$(iYAMLcvsb) \
		iYAMLcvsl=$(iYAMLcvsl) \
		iYAMLbtag=$(iYAMLbtag) \
		rootMAKEHISTO=$(sourceFOLDER)/$$bin_hist > logs_$$binning_str; 2>&1 \
	mv logs_$$binning_str binned__$$binning_str
make_psuedodatabin_%:
	@bin_hist=$*; \
	if [ -f "$(sourceFOLDER)/$$bin_hist" ]; then \
		echo "Running binning $(sourceFOLDER)/$$bin_hist"; \
		cc=$${bin_hist##*__}; binning_str=$${cc%.*}; \
		MAKEFLAGS=-j1 make -f $(singleMAKEFILE) all_psuedodata \
			oDIR=binned_$$binning_str \
			iYAMLcvsb=$(iYAMLcvsb) \
			iYAMLcvsl=$(iYAMLcvsl) \
			iYAMLbtag=$(iYAMLbtag) \
			rootMAKEHISTO=$(sourceFOLDER)/$$bin_hist  > logs_$$binning_str 2>&1; \
		mv logs_$$binning_str binned_$$binning_str; \
	else \
		echo "Skipping $$bin_hist: file not found."; \
	fi
make_databin_%:
	@bin_hist=$*; \
	if [ -f "$(sourceFOLDER)/$$bin_hist" ]; then \
