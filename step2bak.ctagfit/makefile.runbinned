cleanworkspace: ## manually clean up output directory [oDIR=hi_hiii/][forcerun=1]
	$(call check_defined,oDIR) 
	@if [ -d "$(oDIR)" ]; then \
		if [ "$(forcerun)" == "" ]; then read -p "[FolderExisting] folder '$(oDIR)' existing, remove content inside it?"; fi; \
	    echo "[FolderRemoval] '$(oDIR)' removed"; rm -rf "$(oDIR)"; fi # Removing oDIR, ask folder removal once option 'forcerun' checked
	/bin/rm -rf binned_*


# Create output directory
ifdef oDIR
$(oDIR):
	$(call check_defined,sourceFOLDER)
	$(call check_defined,singleMAKEFILE)
	@echo "[INFO] Creating directory: $(oDIR)"
	mkdir $@
endif
allbinning_psuedodata: $(oDIR) $(addprefix make_psuedodatabin_,$(BINNING_FILELIST)) ## run "make -f singleMAKEFILE all" for all histograms for psuedo data
	make -f $(self) merge_binning_comparetruth_LCB binningDIR=./ BINNING_FILELIST="$(BINNING_FILELIST)"
	mv merging_binning_result.* $(oDIR)/
	mv binned_* $(oDIR)/
allbinning_data: $(oDIR) $(addprefix make_databin_,$(BINNING_FILELIST_DATA)) ## run "make -f singleMAKEFILE all" for all histograms for data
	make -f $(self) merge_binning_datafit_LCB binningDIR=./ BINNING_FILELIST_DATA="$(BINNING_FILELIST_DATA)"
	mv merging_binning_result.* $(oDIR)/
	mv binned_* $(oDIR)/

print-bins:
	@echo "Loaded BINNING_LIST: "; for a in $(BINNING_FILELIST); do echo "  >> $$a"; done


merge_binning_datafit_LCB: ## run commands for merging estimation for all binning in pt spectrum  [binningDIR=./]
	$(call check_defined,binningDIR)
	work_dir=$$PWD ; cd $(binningDIR) && \
		python3 $${work_dir}/merging_binning.py datafit_LCB $(BINNING_FILELIST_DATA) &&\
		DrawPlotablesWithCMSFormat.py $${work_dir}/input.check.mergebin.fit00_composition.all.yaml commonINPUTfile=merging_binning_result.datafit_LCB.root dataORmc=data&&\
		DrawPlotablesWithCMSFormat.py $${work_dir}/input.check.mergebin.fit01_composition.all.yaml commonINPUTfile=merging_binning_result.datafit_LCB.root dataORmc=data&&\
		DrawPlotablesWithCMSFormat.py $${work_dir}/input.check.mergebin.fit10_composition.all.yaml commonINPUTfile=merging_binning_result.datafit_LCB.root dataORmc=data&&\
		DrawPlotablesWithCMSFormat.py $${work_dir}/input.check.mergebin.fit11_composition.all.yaml commonINPUTfile=merging_binning_result.datafit_LCB.root dataORmc=data&&\
		DrawPlotablesWithCMSFormat.py $${work_dir}/input.check.mergebin.fit00_composition.yaml commonINPUTfile=merging_binning_result.datafit_LCB.root dataORmc=data&&\
		DrawPlotablesWithCMSFormat.py $${work_dir}/input.check.mergebin.fit01_composition.yaml commonINPUTfile=merging_binning_result.datafit_LCB.root dataORmc=data&&\
		DrawPlotablesWithCMSFormat.py $${work_dir}/input.check.mergebin.fit10_composition.yaml commonINPUTfile=merging_binning_result.datafit_LCB.root dataORmc=data&&\
		DrawPlotablesWithCMSFormat.py $${work_dir}/input.check.mergebin.fit11_composition.yaml commonINPUTfile=merging_binning_result.datafit_LCB.root dataORmc=data && \
		DrawPlotablesWithCMSFormat.py $${work_dir}/input.check.gammaBspectrum.yaml commonINPUTfile=merging_binning_result.datafit_LCB.root dataORmc=data && \
		DrawPlotablesWithCMSFormat.py $${work_dir}/input.check.gammaCspectrum.yaml commonINPUTfile=merging_binning_result.datafit_LCB.root dataORmc=data
merge_binning_comparetruth_LCB: ## run commands for merging estimation for all binning in pt spectrum  [binningDIR=./]
	$(call check_defined,binningDIR)
	work_dir=$$PWD ; cd $(binningDIR) && \
		python3 $${work_dir}/merging_binning.py comparetruth_LCB $(BINNING_FILELIST) && \
		DrawPlotablesWithCMSFormat.py $${work_dir}/input.check.mergebin.stack_ratio.yaml && \
		DrawPlotablesWithCMSFormat.py $${work_dir}/input.check.mergebin.stack_ratio_showunc.yaml && \
		DrawPlotablesWithCMSFormat.py $${work_dir}/input.check.mergebin.fit_significance.yaml

